pipeline {
    agent any

    stages {
         stage('git checkout') {
         steps {
         git branch: 'main', url: 'https://github.com/Lavanya-lahari/Terraform_CICD.git'
          }
        / }
        stage('terraform init') {
            steps {
                sh 'terraform init'
            }
        }
         stage('terraform plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage ('terraform approve') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
}